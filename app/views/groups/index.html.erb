<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table class="table">
  <thead>
    <tr>
      <th>Group Name</th>
      <th>Number of Members</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>

      <% if user_signed_in? and !current_user.try(:admin?) %>
          <% for i in 0...group.user_group_ids.length %>
            <% if  current_user.user_group_ids.include? group.user_group_ids[i] %>
              <tr>
                <td><%= group.name %></td>
                <td><%= group.user_group_ids.length %></td>
                <td><%= link_to 'See Details', group, :class => "btn btn-default" %><br>
              </tr>
            <% end %>
          <% end %>
        <% end %>

        <td><%# link_to 'Show', group %></td>
        <td><%# link_to 'Edit', edit_group_path(group) %></td>
        <td><%# link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Group', new_group_path, :class => "btn btn-primary"  %>

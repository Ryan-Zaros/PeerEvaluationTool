<%= form_with(model: role, local: true) do |f| %>
  <% if role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
        <% role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_area :name %>
  </div>

  <h3>Users</h3>
  <div id="users">

    <%= f.fields_for :users do |user| %>
        <%= render 'user_fields', :f => user %>
    <% end %>
 
    <div class='links'>
      <%= link_to_add_association 'Add New User', f, :users, :class => "btn btn-primary" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

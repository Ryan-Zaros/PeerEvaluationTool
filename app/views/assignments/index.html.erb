<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Assignment Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.name %></td>
        <td><%= link_to 'Edit Name', edit_assignment_path(assignment), :class => "btn btn-default" %></td>
        <td><%= link_to 'Delete Assignment', assignment, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', '/', :class => "btn btn-default" %>
<%= link_to 'Create New Assignment', new_assignment_path, :class => "btn btn-primary" %>
